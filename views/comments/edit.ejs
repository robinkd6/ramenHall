<% include /partials/header %>

<link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
<div class="container">
	<div class="row">
	<h1 style="text-align: center">Edit Comment </h1>
		<div style="width: 30%; margin: 30px auto">
			<form action="/ramenspot/<%= ramen_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
						<input class="form-control" type="text" placeholder="text" name="comment[text]" value="<% comment.text %>">
				</div>
				
				<div class="form-group">
					<button class="btn btn-sm btn-primary btn-block">Submit
					</button>
				</div>
			</form>
			<a href="/ramenspot">Go Back</a>
		</div>

	</div>
</div>




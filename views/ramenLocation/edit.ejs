<% include /partials/header %>

<link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
<div class="container">
	<div class="row">
	<h1 style="text-align: center">Edit <%= ramen.name %> </h1>
		<div style="width: 30%; margin: 30px auto">
			<form action="/ramenspot/<%= ramen._id %>?_method=PUT" method="POST">
				<div class="form-group">
						<input class="form-control" type="text" placeholder="name" name="ramen[name]" value="<%= ramen.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%= ramen.image %>" name="ramen[image]">
				</div>
				<div class="form-group">
						<input class="form-control" type="text" value="<%= ramen.description %>" name="ramen[description]">
				</div>
				<div class="form-group">
						<input class="form-control" type="text" value="<%= ramen.location %>" name="ramen[location]">
				</div>
				<div class="form-group">
						<input class="form-control" type="text" value="<%= ramen.price %>" name="ramen[price]">
				</div>
				<div class="form-group">
					<button class="btn btn-sm btn-primary btn-block">Submit
					</button>
				</div>
			</form>
			<a href="/ramenspot">Go Back</a>
		</div>

	</div>
</div>



<% include /partials/footer %>
<% include /partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Ramen Hall</h1>
				<p>View Ramen Around Town!</p>
				<p>
						<a class="btn btn-primary btn-md" href="/ramenspot/new">Add New Ramen Location</a>
				</p>
		</div>
		
	</header>

	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
			<% rlocations.forEach(function(rlocation){ %>
				<div class="col-md-3 col-sm-6">
					<div class="thumbnail">
							<img src="<%= rlocation.image %>">
						<div class="caption">
							<h4><%= rlocation.name %></h4>
						</div>
						<p>
						<a href="/ramenspot/<%= rlocation._id %>" class="btn btn-primary">More Info</a>
						</p>
					</div>
						
			</div>
			<% }); %>
	</div>
</div>

<% include /partials/footer %>